<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="personalInfoET_Style">
        <item name="android:layout_height">@dimen/personal_info_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingBottom">@dimen/personal_info_et_paddingBottom</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:colorControlActivated">@color/boldBlackColor</item>
        <item name="android:textColorHint">@color/boldBlackColor_50alp</item>
        <item name="colorControlNormal">@color/listing_dividerColor</item>
        <item name="colorControlActivated">@color/boldBlackColor_50alp</item>
    </style>

</resources>
